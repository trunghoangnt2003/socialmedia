@{
    ViewBag.Title = "Registration Successful";
}

<div class="container text-center mt-5">
    <h2 class="text-success">🎉 Registration Successful!</h2>
    <p>We have sent a confirmation email to <strong>@ViewBag.UserEmail</strong>. Please check your inbox and click the link to activate your account.</p>

    <p class="text-muted">If you did not receive the email, please check your "Spam" or "Junk" folder.</p>
    <br /><br />
    <a href="/Login" class="btn btn-primary">Go to Login Page</a>
</div>
