<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sidebar Navigation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />

    <style>
        .logo {
           display: flex;
           flex-direction: column;
           align-content: center;
        }

        .sidebar {
            background: linear-gradient(0.6turn, #af842c, #ebf8e1, #f69d3c);

            height: 100vh;
        }

        .item-sidebar {
            list-style-type: none;
            padding: 0;
            margin: 0;
            font-weight: bold;
        }

        .nav-item {
            margin-bottom: 10px; /* Optional spacing between items */
        }

        .nav-link {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: #333; 
            padding: 10px 15px;
            border-radius: 5px; 
            transition: background-color 0.3s, color 0.3s; 
        }

            
            .nav-link:hover {
                background-color: #ffd43b; /* Highlight color */
                color: #fff; /* Text color on hover */
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2); /* Optional shadow effect */
            }

            /* /* Active link styling */
            .nav-link.active {
                background-color: #ffd43b;
                color: #fff;
            } */


    </style>
</head>


<body>
    <div class="container-fluid">
        @RenderBody()
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar">
                <div class="position-sticky">
                    <div class="logo">
                        <div>
                            Logo
                        </div>
                        <div>
                            Name
                        </div>
                    </div>
                    <ul class="nav flex-column item-sidebar">
                        <li class="nav-item">
                            <a class="nav-link active" href="#" onclick="loadPage('/Admin/Home', this)">
                                <i class="fa-solid fa-house" style="color: #74C0FC;"></i>&nbsp;&nbsp;Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="loadPage('/Admin/ManagePost', this)">
                                <i class="fa-solid fa-newspaper" style="color: #74C0FC;"></i>&nbsp;&nbsp;Manage Post
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="loadPage('/Admin/ManageAccount', this)">
                                <i class="fa-solid fa-user" style="color: #74C0FC;"></i>&nbsp;&nbsp;Manage Account
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="loadPage('/Admin/Setting', this)">
                                <i class="fa-solid fa-gear" style="color: #74C0FC;"></i>&nbsp;&nbsp;Setting
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="showComponent('logout')">
                                <i class="fa-solid fa-right-from-bracket" style="color: #74C0FC;"></i>&nbsp;&nbsp;Logout
                            </a>
                        </li>
                    </ul>

                </div>
            </nav>

            
            <main class="col-md-9 ">
                
            </main>
        </div>
    </div>

    <script>
        function loadPage(url, sidebarItem = null) {
            fetch(url)
                .then((response) => {
                    if (!response.ok) {
                        throw new Error("Failed to load page");
                    }
                    return response.text();
                })
                .then((html) => {
                    // Inject the HTML content into the main content area
                    const mainContent = document.querySelector("main");
                    mainContent.innerHTML = html;

                    // Handle the active state of the sidebar
                    if (sidebarItem) {
                        const sidebarLinks = document.querySelectorAll(".nav-link");
                        sidebarLinks.forEach((link) => {
                            link.classList.remove("active");
                        });

                        sidebarItem.classList.add("active");
                    }
                })
                .catch((error) => {
                    console.error("Error loading page:", error);
                    alert("Unable to load the page.");
                });
        }

        document.addEventListener("DOMContentLoaded", () => {
            // Load the default page on initial load
            const defaultPage = '/Admin/ManageAccount';
            const defaultSidebarItem = document.querySelector(".nav-link[href='#home']");
            loadPage(defaultPage, defaultSidebarItem);
        });
    </script>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
